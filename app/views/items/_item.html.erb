
<tr>
  <td>
    <% item.pictures.default.each do |picture|%>
			<%if picture.imageable_id == item.id%>
				<%= image_tag picture.image_url(:small)%>
			<%end%>
		<%end%> <br />
		<%= link_to item.itemname, item_path(item) %>
  </td>
  <td>$<%= item.price %></td>
  <% if current_user && current_user.admin?%>
  <td>
  		<%= link_to 'Edit', edit_item_path(item) %>
  		<%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <%end%>
</tr>
