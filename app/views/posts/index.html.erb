
<% provide(:title, "#{@subforum.subforumname}'s Posts") %>

<div class="planetsideheader">
<h1><%= @subforum.subforumname%></h1>
<h2>
	Forum: <%= link_to @subforum.forumname, forum_subforums_path(@subforum.forum)%> 
<%if current_user && logged_in?%>
	| | <%= link_to "Create Post", new_subforum_post_path(@subforum) unless @subforum.id == 10 && !current_user.admin?%>
<%end%>
</h2>
</div>

<div class="posts-wrapper">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Last Comment</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
	<tbody>
		<%@posts.each do |post|%>
				<%= render post%>
		<%end%>
	</tbody>
	
	<%= paginate @posts%>
</table>
</div>


