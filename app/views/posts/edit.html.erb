<% provide(:title, "Edit #{@post.postname}") %>
<h1>Edit Your Post</h1>

<div class="form-wrapper">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post, :html => { :class => 'form-horizontal', multipart: true }  do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :postname, 'Post Name' %>
      <%= f.text_field :postname, class: 'form-control' %>
      
      <%= f.label :content, 'Content' %>
      <%= f.text_field :content, class: 'form-control' %>
      
      <%= f.label :pictures, class: 'control-label' %>
	  <%= file_field_tag "images[]", type: :file, multiple: true, class: 'form-control' %>
      
      <%if current_user.admin?%>
      	<%= f.label :sticky, 'Sticky this post?'%>
      	<%= f.check_box :sticky%>
      	<br />
      <%end%>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
</div>