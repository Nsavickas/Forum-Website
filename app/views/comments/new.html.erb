<% provide(:title, 'Create Comment') %>
<h1>Create Comment</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@comment) do |f| %>

      <%= f.hidden_field :post_id, :value => params[:post_id] %>
	  
	  <%= f.hidden_field :user_id, :value => current_user.id %>
           
      <%= f.label :comment_content, 'Content' %>
      <%= f.text_field :comment_content, class: 'form-control' %>

      <%= f.submit "Submit Comment", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>