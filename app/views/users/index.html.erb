<% provide(:title, 'All users') %>

<div class="user-search">
  <h2>Users</h1>

  <%= form_tag users_path, :method => 'get', :id => 'users_search' do %>
      <%= text_field_tag :search, params[:search], class: 'form-control' %>
      <%= submit_tag "Search", :name => nil, class: 'btn' %>
  <% end %>
</div>

<ul class="users">
		<%= render @users%>
    <%= paginate @users %>
</ul>
