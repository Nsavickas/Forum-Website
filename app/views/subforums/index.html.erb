<% provide(:title, "#{@forum.forumname} Subforums") %>

<p id="notice"><%= notice %></p>

<h1><%=@forum.forumname%> Forum</h1>
<h3>
	<% if logged_in? && current_user.admin? %>
    <%= link_to "Create Subforum", new_forum_subforum_path(@forum) %>
  <% end %>
</h3>

<div class="forum-flex-row">
	<div class="flex-row-element">Subforum</div>
	<div class="flex-row-element">Newest Post</div>
</div>

<%= render @subforums%>
<%= paginate @subforums%>

<br>
