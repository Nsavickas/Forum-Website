<% provide(:title, 'Create Forum') %>
<h2>Create Forum</h2>

<div class="form-wrapper">
  <%= form_for(@forum) do |f| %>

    <div class="flex-column-element">
      <%= f.label :forumname, 'Forum Name' %>
      <%= f.text_field :forumname, class: 'form-control' %>
    </div>

    <div class="flex-column-element">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
