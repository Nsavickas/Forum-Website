<% provide(:title, "Edit forum") %>
<h2>Update the Forum</h2>

<div class="form-wrapper">
  <%= form_for(@forum) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="flex-column-element">
      <%= f.label :forumname, 'New Forum Name' %>
      <%= f.text_field :forumname, class: 'form-control' %>
    </div>

    <div class="flex-column-element">
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
