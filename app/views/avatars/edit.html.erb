<% provide(:title, "Edit avatar") %>
<h1>Change avatar</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @avatar do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :displaypic, 'Display Picture', class: 'control-label' %>
	  <%= f.file_field :displaypic, class: 'form-control' %>
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>