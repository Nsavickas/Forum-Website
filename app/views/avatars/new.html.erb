<% provide(:title, "Choose avatar") %>
<h1>Choose avatar</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@avatar) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

	  	<%= f.hidden_field :user_id, :value => params[:user_id] %>

      <%= f.label :displaypic, 'Display Picture', class: 'control-label' %>
	  	<%= f.file_field :displaypic, class: 'form-control' %>
      
      <%= f.submit "Create Avatar", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>